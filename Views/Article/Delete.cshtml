@model WebRecommend.Models.Article

<form method="post">
    <input asp-for="Id" hidden />
    <input asp-for="UserId" hidden />
    <div class="border background p-3">
        <div class="form-group row">
            <h2 class="text-alert-info pl-3">@Model.Title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Title" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Desсription"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Desсription" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Body"></label>
                    </div>
                    <div class="col-8">
                        <div>@Html.Raw(Model.Body)</div>
                    </div>

                </div>
                <div class="mt-2 row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Category.Name" class="form-control" />

                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                </div>

                <div class="mt-3 row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100">@Localizer["DeleteBtn"]</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">@Localizer["CancelBtn"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>