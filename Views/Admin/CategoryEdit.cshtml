@model WebRecommend.Models.Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <h2 class="text-alert-info pl-3">@Localizer["CategoryEditTitle"]</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="mt-2 row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="@Localizer["UpdateBtn"]" />
                        </div>
                        <div class="col">
                            <a asp-action="Categories" class="btn btn-success w-100">@Localizer["CancelBtn"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>

@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial" />
}
}