@model IEnumerable<WebRecommend.Models.AppUser>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped w-100">
        <thead>
            <tr>
                <td class="text text-monospace col">Id</td>
                <td class="text text-monospace col">Email</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <th scope="row">@obj.Id</th>
                    <td>@obj.FullName</td>
                    <td>@obj.Email</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="Profile" asp-route-Id="@obj.Id" asp-action="Index" class="btn btn-primary text-center">To profile</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>You don't have any articles</p>

}