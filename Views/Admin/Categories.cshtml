@model IEnumerable<WebRecommend.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-capitalize">All categories</h2>
        </div>
        <div class="col-6">
            <div class="text-center">
                <a asp-controller="Admin" asp-action="CategoryCreate" class="btn btn-primary text-right">Add new category</a>
            </div>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <td class="text text-monospace">Category name</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="75%">@obj.Name</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Admin" asp-route-Id="@obj.Id" asp-action="CategoryEdit" class="btn btn-primary text-center">Edit</a>
                                <a asp-controller="Admin" asp-route-Id="@obj.Id" asp-action="CategoryDelete" class="btn btn-danger text-center">Delete</a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    }
    else
    {
        <p>No categories</p>

    }

</div>